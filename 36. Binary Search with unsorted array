//Binary search with unsorted array

#include<stdio.h>

int binary(int arr[])
{
    int key,mid,low=0,high=5;
    printf("\n Enter element to search:");
    scanf("%d",&key);
    while(low<=high)
    {
        mid=(low+high)/2;
        if(arr[mid]==key)
        {
            printf("Element %d is found at position %d \n",key,mid+1);
            return 0;
        }
        else if(key<arr[mid])
        {
            high=mid-1;
        }
        else
            low=mid+1;
    }
    printf("Element %d not found in array",key);
    return 0;
}

int main()
{
   int i,j,temp=0,n=6;
   int arr[6];
   printf("Enter 6 unsorted elements in the array : ");
   for(i=0;i<n;i++)
   scanf("%d",&arr[i]);

   for(i=0;i<n-1;i++)
   {
       for(j=0;j<n-i-1;j++)
       {
           if(arr[j]>arr[j+1])
           {
               temp=arr[j+1];
               arr[j+1]=arr[j];
               arr[j]=temp;
           }
       }
   }

   printf("Sorted Array : ");
   for(i=0;i<n;i++)
    printf("%d ",arr[i]);

    binary(arr);
    return 0;
}